<div class="mdl-card" style="width: 35%;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
  <!-- <h3>Cadastrar</h3> -->
  <%= devise_error_messages! %>
  <div class="mdl-grid">
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :name, 'Nome', class: "mdl-textfield__label" %>
      <%= f.text_field :name, autofocus: true, class: "mdl-textfield__input" %>
    </div>
  </div>
  <div class="mdl-grid">
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :email, 'E-mail', class: "mdl-textfield__label" %>
      <%= f.email_field :email, class: "mdl-textfield__input" %>
    </div>
  </div>

  <div class="mdl-grid">
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :password, 'Senha', class: "mdl-textfield__label" %>
      <%= f.password_field :password, class: "mdl-textfield__input" %>
    </div>
  </div>

  <div class="mdl-grid">
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.label :password_confirmation, 'ConfirmaÃ§Ã£o de Senha', class: "mdl-textfield__label" %>
      <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
    </div>
  </div>

  <div class="mdl-grid">
    <%= f.submit 'Cadastrar', class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
  </div>
  <% end %>
</div>