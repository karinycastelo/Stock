<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
  <!-- <h3>Cadastrar</h3> -->
  <%= devise_error_messages! %>
  <div class="row" padding-top>
    <div class="card">
      <div class="card-content">
        <div class="input-field"> 
          <%= f.label :name, 'Nome' %>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="input-field"> 
          <%= f.label :email, 'E-mail' %>
          <%= f.email_field :email %>
        </div>

        <div class="input-field"> 
          <%= f.label :password, 'Senha' %>
          <%= f.password_field :password %>
        </div>
        <div class="input-field"> 
          <%= f.label :password_confirmation, 'ConfirmaÃ§Ã£o de Senha' %>
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="input-field">
          <%= f.select :role_id, options_for_select(resource.roles), include_blank: true %>
          <%= f.label :role_id, "Cargo" %>
        </div>

        <div class="actions center">
          <%= f.submit 'Cadastrar novo usuÃ¡rio', class: "waves-effect waves-light btn blue-grey darken-1" %>
        </div>
      </div>
    </div>
  <% end %>
</div>