<div class="authform">
  <%= simple_form_for(resource, html: { class: 'form-vertical' }) do |f| %>
  <div class="form-inputs">
    <div class="row">
      <%= f.input :name, label: 'Nome' %>
    </div>
    <div class="row">
      <%= f.input :email, label: 'E-mail', as: :email %>
    </div>
    <div class="row">
      <%= f.input :password, label: 'Senha', as: :password %>
    </div>
    <div class="row">
      <%= f.input :password_confirmation, label: 'ConfirmaÃ§Ã£o de Senha', as: :password %>
    </div>
    <div class="row">
      <%= f.input :role_id, label: 'Cargo', collection: resource.roles, prompt: "Escolha um Cargo" %>
    </div>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, class: 'button right' %>
  </div>
  <% end %>
</div>
