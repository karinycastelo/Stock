<div class="android-card-container mdl-card mdl-shadow--2dp">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <%- if devise_mapping.registerable? %>
      <%# <%= link_to 'Cadastrar', new_registration_path(resource_name), class: 'right'  %>
    <% end -%>
    <div class="mdl-textfield mdl-js-textfield"> 
      <%= f.email_field :email, placeholder: 'E-mail', autofocus: true, class: 'mdl-textfield__input' %>
    </div>

    <%#- if devise_mapping.recoverable? %>
      <%# <%= link_to "Esqueci minha senha", new_password_path(resource_name) %>
    <%# end -%>
      
    <div class="mdl-textfield mdl-js-textfield">
      <%= f.password_field :password, placeholder: 'Senha', class: 'mdl-textfield__input' %>
    </div>

    <%# if devise_mapping.rememberable? -%>
      <%# = f.check_box :remember_me%> <%#Lembrar de mim %>
    <%# end -%>
    <div style="text-align: center;">
      <%= f.submit 'Entrar', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
    </div>
  <% end %>
</div>