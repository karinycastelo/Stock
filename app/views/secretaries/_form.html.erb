<div class="card">
  <div class="card-content">
    <%= form_for(secretary) do |f| %>
      <% if secretary.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(secretary.errors.count, "error") %> proibiram este item de ser salvo:</h2>
          <ul>
            <% secretary.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :name, "Nome da Secretaria" %>
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :address, "Endereço" %>
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.collection_select(:user_id, User.all.where("role_id == 2"), :id, :name, include_blank: "") %>
          <%= f.label :user_id, "Responsável" %>
        </div>
      </div>

      <div class="actions center">
        <% if secretary.new_record? %>
          <%= f.submit "Cadastrar", class:"waves-effect waves-light btn blue-grey darken-1" %>
        <% else %>
          <%= f.submit "Atualizar", class:"waves-effect waves-light btn blue-grey darken-1" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>