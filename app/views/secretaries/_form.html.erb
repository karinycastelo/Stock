<div class="mdl-card" style="width: 35%;">
  <%= form_for(secretary) do |f| %>
    <% if secretary.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(secretary.errors.count, "error") %> proibiram este item de ser salvo:</h2>

        <ul>
        <% secretary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mdl-grid">
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :name, "Nome da Secretaria", class: "mdl-textfield__label" %>
        <%= f.text_field :name, class: "mdl-textfield__input" %>
      </div>
    </div>

    <div class="mdl-grid">
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :address, "Endereço", class: "mdl-textfield__label" %>
        <%= f.text_field :address, class: "mdl-textfield__input" %>
      </div>
    </div>

    <div class="mdl-grid">
        <div class ="mdl-textfield mdl-js-textfield getmdl-select">
          <%= f.text_field :user_id, id: :user_id, class: "mdl-textfield__input" %>
          <%= f.hidden_field  :user_id %>
          <label for="user_id" class="mdl-textfield__label">Responsável</label>
          <ul for="user_id" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
            <% User.all.where("role_id == 2").each do |user| %>
              <li class="mdl-menu__item"><%= user.name %></li>
            <% end %>
          </ul>
        </div>
      </div>

    <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--4-col"></div>
      <div class="mdl-cell mdl-cell--4-col">
        <% if secretary.new_record? %>
          <%= f.submit "Cadastrar", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
        <% else %>
          <%= f.submit "Atualizar", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
        <% end %>
      </div>
      <div class="mdl-cell mdl-cell--4-col"></div>
    </div>
<% end %>
</div>