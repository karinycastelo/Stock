<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="column" style="text-align: left; margin-left: -15px;">
      <h3>Empresas</h3>
    </div>
    <div class="column" style="text-align: right;">
      <h4><%= link_to 'Nova Empresa', new_enterprise_path %></h4>
    </div>
  </div>

  <div class="row">

    <table class="table">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @enterprises.each do |enterprise| %>
        <tr>
          <td><%= enterprise.name %></td>
          <td><%= enterprise.description %></td>
          <td><%= link_to 'Mostrar', enterprise %></td>
          <td><%= link_to 'Editar', edit_enterprise_path(enterprise) %></td>
          <td><%= link_to 'Excluir', enterprise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
