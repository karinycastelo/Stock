<div class="card">
  <div class="card-content">
    <%= form_with(model: sector, local: true) do |f| %>
      <% if sector.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(sector.errors.count, "error") %> prohibited this item from being saved:</h2>
          <ul>
            <% sector.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :name %>
          <%= f.label :name, "Nome do Setor" %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12"> 
          <%= f.collection_select(:secretary_id, Secretary.all, :id, :name, include_blank: true) %>
          <%= f.label :secretary_id, "Secretaria" %>
        </div>
      </div>
    
      <div class="actions center">
        <% if sector.new_record? %>
          <%= f.submit "Cadastrar", class:"waves-effect waves-light btn blue-grey darken-1" %>
        <% else %>
          <%= f.submit "Atualizar", class:"waves-effect waves-light btn blue-grey darken-1" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>