<div class="mdl-card" style="width: 40%">
  <%= form_with(model: type, local: true) do |f| %>
    <% if type.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(type.errors.count, "error") %> prohibited this item from being saved:</h2>
        <ul>
          <% type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mdl-grid">
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.text_field :description, class: "mdl-textfield__input" %>
        <%= f.label :description, "Descrição do Tipo de Item", class: "mdl-textfield__label" %>
      </div>
    </div>
    <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--9-col"></div>
      <div class="mdl-cell mdl-cell--2-col">
        <% if type.new_record? %>
          <%= f.submit "Cadastrar", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
        <% else %>
          <%= f.submit "Atualizar", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>